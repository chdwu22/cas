<%= form_for(course) do |f| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <table>
      <tr>
        <td><%= f.label :section, :style => "float:left; margin-right: 1em;" %></td>
        <td><%= f.text_field :section %></td>
      </tr>
      <tr>
        <td><%= f.label :size, :style => "float:left; margin-right: 1em;" %></td>
        <td><%= f.number_field :size %></td>
      </tr>
      <tr>
        <td><%= f.label "Faculty", :style => "float:left; margin-right: 1em;" %></td>
        <td><%= f.select :user_id, options_for_select(@users, course.user_id) %></td>
      </tr>
      <tr>
        <td><%= f.label :room_id, :style => "float:left; margin-right: 1em;" %></td>
        <td><%= f.select :room_id, options_for_select(@rooms_select, course.room_id) %></td>
      </tr>
      <tr>
        <td><%= f.label :time, :style => "float:left; margin-right: 1em;" %></td>
        <td><%= f.select :time, options_for_select(@stringtimeslots, course.time) %></td>
      </tr>
    </table>
  </div>

  <div class="actions">
    <%= f.submit class:'btn btn-default' %>
  </div>
<% end %>
