<%= form_for(course) do |f| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :section %>
    <%= f.text_field :section %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :size %>
    <%= f.number_field :size %>
  </div>

  <div class="field">
    <%= f.label "Faculty"%>
    <%= f.select :user_id, options_for_select(@users, course.user_id) %>
  </div>
  
  <div class="field">
    <%= f.label :time %>
    <%= f.text_area :time, row: 8 %>
  </div>
  
  <div class="field">
    <%= f.label :room_id %>
    <%= f.select :room_id, options_for_select(@rooms_select, course.room_id) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
