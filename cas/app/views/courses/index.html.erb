<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<div class='row'>
  <div class="col-sm-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Number</th>
          <th>Section</th>
          <th>Name</th>
          <th>Size</th>
          <th>Day</th>
          <th>Time</th>
          <th>Year</th>
          <th>Semester</th>
          <th>Room</th>
          <th>Faculty</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.number %></td>
            <td><%= course.section %></td>
            <td><%= course.name %></td>
            <td><%= course.size %></td>
            <td><%= course.day %></td>
            <td><%= course.time %></td>
            <td><%= course.year %></td>
            <td><%= course.semester %></td>
            <td><%= course.room.number %></td>
            <td><%= course.user.full_name %></td>
            <td><%= link_to 'Show', course %></td>
            <td><%= link_to 'Edit', edit_course_path(course) %></td>
            <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

