<div class='row'>
  <div class="col-xs-9">
    <h3>View Course Assignment</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="150"></th>
          <% @rooms.each do |room| %>
            <th> <%= room.number %> [<%= room.capacity %>] </th> 
          <% end %>
        </tr>
      </thead>
    
      <tbody>
        <% @MWF.each do |mwf| %>
          <tr>
            <td>MWF <%= format_time(mwf.from_time.to_s+"-"+mwf.to_time.to_s) %></td>
            <% @rooms.each do |room| %>
              <% course = get_course(room, mwf) %>
              <% preference = get_preference(course, mwf) %>
              <% if preference == 1 %> <td bgcolor="#CCFFCC"> <% elsif preference == 3 %> <td bgcolor="#FFCCCC"> <% else %> <td> <% end %>
              <% if course != nil %> 
                <% @assigned_courses << course %>
                <%= link_to course.number, edit_course_path(course) %> 
                <% if course.user_id!=1 %>
                  <%= course.user.full_name %>
                <% end %>
                <br>size: <%= course.size %>
              <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
        <tr><td bgcolor="#cccccc"></td></tr>
        <% @MW.each do |mw| %>
          <tr>
            <td>MW <%= format_time(mw.from_time.to_s+"-"+mw.to_time.to_s) %></td>
            <% @rooms.each do |room| %>
              <% course = get_course(room, mw) %>
              <% preference = get_preference(course, mw) %>
              <% if preference == 1 %> <td bgcolor="#CCFFCC"> <% elsif preference == 3 %> <td bgcolor="#FFCCCC"> <% else %> <td> <% end %>
              <% if course != nil %> 
                <% @assigned_courses << course %>
                <%= link_to course.number, edit_course_path(course) %> 
                <% if course.user_id!=1 %>
                  <%= course.user.full_name %>
                <% end %>
                <br> size:<%= course.size %>
              <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
        <tr><td bgcolor="#cccccc"></td></tr>
        <% @TR.each do |tr| %>
          <tr>
            <td>TR <%= format_time(tr.from_time.to_s+"-"+tr.to_time.to_s) %></td>
            <% @rooms.each do |room| %>
              <% course = get_course(room, tr) %>
              <% preference = get_preference(course, tr) %>
              <% if preference == 1 %> <td bgcolor="#CCFFCC"> <% elsif preference == 3 %> <td bgcolor="#FFCCCC"> <% else %> <td> <% end %>
              <% if course != nil %> 
                <% @assigned_courses << course %>
                <%= link_to course.number, edit_course_path(course) %> 
                <% if course.user_id!=1 %>
                  <%= course.user.full_name %>
                <% end %>
                <br> size:<%= course.size %>
              <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>