<p id="notice"><%= notice %></p>

<div>
  <%= link_to 'Add Room', new_room_path, class:'btn btn-default' %>
</div><br>

<div class='row'>
  <div class="col-xs-6">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Number</th>
          <th>Capacity</th>
          <th>Available time</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>
    
      <tbody>
        <% @rooms.each do |room| %>
        <% if room.id !=1 %>
          <tr>
            <td><%= room.number %></td>
            <td><%= room.capacity %></td>
            <td><%= room.available_time %></td>
            <td><%= link_to 'Edit', edit_room_path(room), class:'btn btn-sm btn-default'  %></td>
            <td><%= link_to 'Delete', room, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-default' %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>