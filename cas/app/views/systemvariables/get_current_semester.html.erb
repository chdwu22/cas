<h3>Set current semester to:</h3>
<%= form_tag("/set_current_semester", method: "get") do %>
  <div class="field">
    <%= number_field_tag(:year, @year.value, :style => "float:left;") %>
    <%= select_tag :semester, options_for_select(@semesters), :style => "float:left;"%>
    <%= submit_tag "Update", class:'btn btn-sm btn-default', :style => "float:left;"%>
  </div>
<% end %>