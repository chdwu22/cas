<h3>Set current semester to:</h3>
<%= form_tag("/set_current_semester", method: "get") do %>
  <div class="field">
    <%= number_field_tag(:year, @year.value, :style => "float:left; margin-right: 1em;") %> 
    <%= select_tag :semester, options_for_select(@semesters), :style => "float:left; margin-right: 1em;"%>
    <%= submit_tag "Update", class:'btn btn-sm btn-default', :style => "float:left; margin-right: 1em; "%>
  </div>
<% end %>