<h1>Time table</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th> </th>
      <% @days.each do |day| %>
        <th> <%= day.value %> </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @times.each do |time| %>
      <tr>
        <td><%= format_time(time) %><br></td>
        <% @days.each do |day| %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>