<div class='row'>
  <div class="col-sm-6">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Courses</th>
        </tr>
      </thead>
    
      <tbody>
        <% if !@users.empty? %>
          <% @users.each do |user| %>
            <% if user.id!=1 %>
              <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td>
                  <% user.courses.each do |course| %>
                    <% if course.year == current_year.to_i && course.semester==current_semester %>
                      <%= course.number %> | 
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        <% end %>
      </tbody>
    </table>
</div>
</div>
