<div class='row'>
  <div class="col-sm-4">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Courses</th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td>
              <% user.courses.each do |course| %>
                <%= course.number %> | 
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
</div>
