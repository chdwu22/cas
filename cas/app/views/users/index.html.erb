<div class='row'>
  <div class="col-sm-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Is admin</th>
          <th>Email</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
    
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= 'Yes' if user.is_admin%></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Reset password', edit_user_path(user) %></td>
            <% if current_user.id != user.id && user.id != 1 %>
              <td><%= link_to 'Change role', change_role_path(:id => user.id) %></td>
              <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td></td><td></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
</div>

